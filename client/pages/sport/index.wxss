/* pages/sport/index.wxss */
page{
  height: 100%
}
.wrap{
  height: 100%;
  width: 100%;
  box-sizing: border-box;
}
.title{
  height: 80rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  color: #333333;
  font-size: 28rpx;

    padding-left: 30rpx;
    background:#f6f6f6f6;
}

.mode-item{
  display: flex;
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
  height: 150rpx;
  align-items: center;
  justify-content: space-between;

  position: relative;
}

.mode-item.hover{
  opacity: 0.7
}

.mode-item::after{
  width: calc(100% - 30rpx);
  height: 1px;
  position: absolute;
  left: 30rpx;
  bottom: 0rpx;
  content:'';
  background: #ebedf0;
}

.mode-item:last-child{
  border-bottom: unset !important
}

.left{
  display: flex;
  flex-direction: column;
}

.name{
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
}

.description{
  color: #999999;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit{
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333333;
}

.edit-btn{
  background: #007947;
  padding: 0rpx 10rpx;
  border-radius: 4rpx;
  color: #ffff;
  margin-left: 10rpx
}

.edit-btn-hover{
  opacity: 0.8
}

.image-wrap{
  padding: 10rpx 10rpx;
  background: #000000;
  opacity: 0.5;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.img{
  width: 40rpx;
  height: 40rpx;
}