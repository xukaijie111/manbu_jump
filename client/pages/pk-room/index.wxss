/* pages/pk-room/index.wxss */

page{
  height: 100%;
}

.wrap{
  height: 100%;
  background-color: #000000;
  padding: 30rpx 30rpx;
}

.pk-base-info-wrap{
  color: #999999;
  font-size: 28rpx;
}

.item{
  margin-bottom: 20rpx;
}
.man-title{
  margin-bottom: 20rpx;
}
.user-item-wrap{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  width: 100%;
  padding-left: 20rpx;
}

.user-list-wrap{
  margin-top: 40rpx;
  color: #999999;
  font-size: 28rpx;
}

.user-item{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin-bottom: 40rpx;
}

.header{
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
  border-radius: 50%;
}

.nickname{
  color: #ffffff;
}

.btn-wrap{
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn{
  height: 80rpx;
  width: 600rpx;
  border-radius: 1000px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #ffffff;
  background-color: rgba(210,63,49,1);
}

.tip{
  width: 100%;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 40rpx;
  color: red;
  font-size: 24rpx;
  position: absolute;
  left: 0rpx;
  top: -50rpx;
}

.disabled{
  opacity: 0.7;
}