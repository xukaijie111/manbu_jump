/* pages/add-pk/index.wxss */
page{
  height: 100%;
}

.wrap{
  height: 100%;
  background-color: #F6F6F6;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 30rpx;
  color: #999999;
  font-size: 28rpx;
}

.title{
  position: relative;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  color: #333333;
}

.title::after{
  position: absolute;
  content: '';
  width: calc(100% - 30rpx);
  height: 1px;
  background-color: #f6f6f6;
  left: 0rpx;
  bottom: 0rpx;
}

.item-wrap{
  background-color: #ffffff;
  border-radius: 8rpx;
  padding: 30rpx 30rpx;
}

.radio-wrap{
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.picker{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.arrow{
  width: 30rpx;
  height: 30rpx;
}

.time-wrap,.max-man,.count-wrap{
  margin-top: 30rpx;
}

.btn-wrap{
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn{
  height: 80rpx;
  width: 600rpx;
  border-radius: 1000px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #ffffff;
  background-color: rgba(210,63,49,1);
}