/* pages/ready_jump/index.wxss */

page{
  background-color: #000000;
  color: #ffffff;
}

.device-name{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}

.content{
  position: absolute;
  left: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 40%;
  font-size: 80rpx;
  width: 100%;
}

.free{
  font-style: italic;
}

.edit{
  font-style: normal;
  font-size: 28rpx;
 padding:0rpx 30rpx;
 background-color: #07c160;
 border-radius: 8rpx;
 margin-top: 10rpx;
 text-align: center;
}

.time{
  font-style: italic;
  display: flex;
  align-items: center;
  flex-direction: column; 
}

.unit{
  font-style: normal;
  font-size: 28rpx;
  color: gray;
}

.btn-wrap{
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty{
  font-size: 28rpx;
  color: #ab5555;
 padding: 10rpx 0rpx 20rpx 0rpx;
}