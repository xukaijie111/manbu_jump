
<view class="wrap">
    <view class="content">
    <view class="time-wrap" wx:if='{{mode === 1}}'>
        <view class="time">
            <view >{{timeData.timeStr}}</view>
            <view class="gray-1 size-24">时:分:秒</view>
        </view>
        <view class="time-info size-40">
            <view class="time-count-wrap">
                <view>{{timeData.count}}</view>
                <view class="gray-1 size-24">个</view>
            </view>
            <view class="ka-wrap">
                <view>{{ka}}</view>
                <view class="gray-1 size-24">卡</view>
            </view>
        </view>
    </view>

    <view class="time-wrap" wx:if='{{mode === 2}}'>
        <view class="time">
            <view >{{countData.count}}</view>
            <view class="gray-1 size-24">个</view>
        </view>
        <view class="time-info size-40">
            <view class="time-count-wrap">
                <view >{{countData.timeStr}}</view>
                <view class="gray-1 size-24">分:秒</view>
            </view>
            <view class="ka-wrap">
                <view >{{ka}}</view>
                <view class="gray-1 size-24">卡</view>
            </view>
        </view>
    </view>

    <view class="free-wrap" wx:if='{{mode === 0}}'>
        <view class="time-2">
            <view >{{freeData.timeStr}}</view>
           <view class="gray-1 size-24">时:分:秒</view>
        </view>
        <view class="time-2 base">
            <view >{{freeData.count}}</view>
            <view class="gray-1 size-24">个</view>
        </view>
      
        <view class="time-2 base">
            <view >{{ka}}</view>
            <view class="gray-1 size-24">卡</view>
        </view>
      
    </view>

    </view>

    <view class="btn-group">
        <block wx:if='{{status === 0}}'>
            <view class="flex-column start-wrap">
              <image src='/images/start.png' class="start-img"  catchtap='clickStart' hover-class='hover'></image>
              <view class="color-999 size-24">开始</view>
            </view>
        </block>
        <block wx:if='{{status === 1}}'>
           <view class="flex-column start-wrap">
              <image src='/images/start.png' class="start-img"  catchtap='clickEnd' hover-class='hover'></image>
              <view class="color-999 size-24">结束</view>
            </view>
        </block>
        <block wx:if='{{status === 2}}'></block>

        <block wx:if='{{status === 3}}'></block>
    </view>

    <view class="gift-wrap">
      <image src='/images/jump.gif' class="gift"></image>
    </view>

</view>