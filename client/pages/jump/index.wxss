/**index.wxss**/

page{
  background: #000000;
  opacity: 0.9;
  height: 100%;
}
.title{
  color: #fff;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}

.btn-wrap{
  width: 100%;
  left: 0rpx;
  position: absolute;
  bottom: 100rpx;
   display: flex;
   align-items: center;
   justify-content: center;
}
.btn{
    width: 200rpx;
  height: 200rpx;
    border-radius: 50%;
   box-shadow:0 2rpx 10rpx 0 rgba(111,63,59,0.12);
   
   color: #ffffff;
   background-color: rgba(255,255,255,0.3);
   
   display: flex;
   align-items: center;
   justify-content: center;
}

.hover{
  opacity: 0.7
}


.info-wrap{
  display: flex;
  align-items: center;
  justify-content: space-around;
  color: #ffffff;
}

.flex-column{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column
}