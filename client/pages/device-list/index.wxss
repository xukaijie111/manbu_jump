/* pages/device-list/index.wxss */

.wrap{
  padding: 30rpx 30rpx;
  box-sizing: border-box
}
.item-wrap{
    width: 100%;
    height: 200rpx;
    background-color: #f6f6f6;
    color: #333333;
    position: relative;
    margin-bottom: 30rpx;
    border-radius: 18rpx;
}

.content{

  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
}

 .sport-img{
        position: absolute;
        width:100%;
        height:100%;
        z-index: -1;
}

.status-wrap{
  width: 120rpx;
  height: 50rpx;
  border-radius: 8rpx;
  background: #007947;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.status-wrap-hover{
  opacity: 0.7
}

.jump-img{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  overflow: hidden;
}

.jump-img-content {
  width: 100%;
  height: 100%;
}

.left{
  display: flex;
  align-items: center;
  justify-content: center;
}